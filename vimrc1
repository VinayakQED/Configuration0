" Show line numbers
set number
set number relativenumber

"search
set incsearch
set hlsearch
"Automatically wrap text that extends beyond the screen length
set wrap

"Encoding 
set encoding=utf-8

"Use spaces instead of tabs
"set expandtab=4
"set tabstop=4
"Status bar
set laststatus=2

"Colorschemes
"colorscheme onedark

"Enable syntax highlighting
syntax on 
set showmatch

"syntax enable

set background=dark
"Highlight current line
set cursorline 
set cmdheight=1
set ruler
"Call the .vimrc.plug file
if filereadable(expand("~/.vimrc.plug"))
    source ~/.vimrc.plug
endif
